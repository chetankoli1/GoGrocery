<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/background"
    tools:context=".Activites.ForgotPasswordActivity">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Welcome"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/lgoinTv"
        android:layout_below="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Forgot Your Password"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lgoinTv"
        android:layout_marginTop="80dp"
        android:id="@+id/r1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:id="@+id/tvEmail"
            />
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cardEmail"
            app:neumorph_shapeType="basin"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="3dp"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail">
            <EditText
                android:drawableLeft="@drawable/ic_baseline_email_edt"
                android:drawablePadding="10dp"
                android:hint="Enter Yor Email"
                android:id="@+id/forgotEdtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"/>
        </soup.neumorphism.NeumorphCardView>
    </RelativeLayout>
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/forgotPasswordBtn"
        style="@style/ShapeAppearance.Neumorph.CardView"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_inset="8dp"
        android:layout_margin="40dp"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="Send mail"/>
    </soup.neumorphism.NeumorphCardView>


</RelativeLayout>