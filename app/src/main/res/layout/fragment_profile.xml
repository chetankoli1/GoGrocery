<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".Fragments.ProfileFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:hint="Enter name"
        android:id="@+id/upName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:hint="Enter Email"
        android:id="@+id/upEmail"
        android:layout_below="@+id/upName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:hint="Enter Phone"
        android:id="@+id/upPhone"
        android:layout_below="@+id/upEmail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:hint="Enter City"
        android:id="@+id/upCity"
        android:layout_below="@+id/upPhone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="@color/dark_green"
        android:id="@+id/logout"
        android:textColor="@color/black"
        android:text="Logout"
        android:layout_below="@+id/upCity"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>